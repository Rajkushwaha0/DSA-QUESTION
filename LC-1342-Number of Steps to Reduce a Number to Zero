class Solution {
    public int numberOfSteps(int num) {
        int c=0;
        return solve(num , c);
    }
    public int solve(int num ,int  c){
        if(num==0){
            return c;
        }
        if(num%2==0){
            return solve(num/2,c+1);
        }
        else{
            return solve(num-1,c+1);
        }
    }
}
